        // Function to validate and process sign up
        function signUp() {
            const role = document.getElementById('role').value;
            const name = document.getElementById('name').value.trim();
            const age = parseInt(document.getElementById('age').value.trim());
            const email = document.getElementById('email').value.trim();
            const password = document.getElementById('password').value.trim();
            const confirmPassword = document.getElementById('confirmPassword').value.trim();
            const doctorId = document.getElementById('doctorId').value.trim();


            // const hospitalId = document.getElementById('hospitalId').value.trim();

            let isValidInput = true;

            if (!name) {
                document.getElementById('nameError').innerText = 'Name is required';
                isValidInput = false;
            } else {
                document.getElementById('nameError').innerText = '';
            }

            if (!isValidAge(age)) {
                document.getElementById('ageError').innerText = 'Enter a valid age';
                isValidInput = false;
            } else {
                document.getElementById('ageError').innerText = '';
            }

            if (!isValidEmail(email)) {
                document.getElementById('emailError').innerText = 'Invalid email';
                isValidInput = false;
            } else {
                document.getElementById('emailError').innerText = '';
            }

            if (!isValidPassword(password)) {
                document.getElementById('passwordError').innerText = 'Password must be at least 6 characters long';
                isValidInput = false;
            } else {
                document.getElementById('passwordError').innerText = '';
            }

            if (password !== confirmPassword) {
                document.getElementById('confirmPasswordError').innerText = 'Passwords do not match';
                isValidInput = false;
            } else {
                document.getElementById('confirmPasswordError').innerText = '';
            }
            // Validate Doctor ID
            if (!isValidDoctorId(doctorId)) {
                document.getElementById('doctorIdError').innerText = 'Doctor ID is required';
                isValidInput = false;
            } else {
                document.getElementById('doctorIdError').innerText = '';
            }


            // if (role === 'doctor' && !isValidHospitalId(hospitalId)) {
            //   document.getElementById('hospitalIdError').innerText = 'Invalid hospital ID';
            //   isValidInput = false;
            // } else {
            //   document.getElementById('hospitalIdError').innerText = '';
            // }

            if (isValidInput) {
                // Process sign up (redirect, API call, etc.)
                alert('Sign up successful!');
            }
        }

        // Event listeners
        // document.getElementById('role').addEventListener('change', toggleHospitalIdField);
        document.getElementById('signupBtn').addEventListener('click', signUp);
    </script>

</body>

</html>