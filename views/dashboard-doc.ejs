    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Montserrat&display=swap');

        #title {
            background-color: #0ccfc2;
            color: white;
        }

        .container-fluid {
            padding: 3% 15%;
        }

        .container-gg {
            width: 100%;
            display: flex;
            flex-direction: row;
            justify-content: center;

        }

        h1 {
            font-family: "Ubuntu";
            font-size: 3.5rem;
            margin-left: 5%;
            line-height: 1.5;
        }

        h2 {
            font-size: 3rem;
            line-height: 1.5;
        }

        h3 {
            font-family: "Ubuntu";
        }

        p {
            color: #8f8f8f;
        }

        body {
            font-family: "Montserrat";
            font-size: 1rem;


            line-height: 1.5;

        }

        .book-button {
            margin: 10% 5% 5% 0;
            margin-left: 5%;

        }

        .navbar {
            padding-bottom: 4.5rem;

        }

        .navbar-brand {
            font-family: "ubuntu";
            font-size: 2.5rem;
            font-weight: bold;
            margin-left: 5%;

        }

        .nav-item {
            padding: 0 18px;
        }

        .nav-link {
            font-size: 1.2rem;
            font-family: "ubuntu";

        }

        .title-image {
            width: 60%;

        }

        .abc {
            padding-right: 100px;
            padding: 5%;
            text-align: center;

        }

        .pqr {
            padding-right: 75px;
            text-align: center;
            padding: 5%;
        }

        .xyz {
            text-align: center;
            padding: 5%;
        }

        /* features section */
        #features {
            padding: 7% 15%
        }

        .icon {
            color: #5cefe5;
            margin-bottom: 1rem;
        }

        .icon:hover {
            color: #0ccfc2;
        }
    </style>

</head>

<body>

    <section id="title">
        <div class="conatiner-fluid">
            <!-- Nav Bar -->
            <nav class="navbar navbar-expand-lg navbar-dark">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarTogglerDemo02" aria-controls="navbarTogglerDemo02" aria-expanded="false"
                    aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <a class="navbar-brand" href="">मेडिMantra</a>
                <div class="collapse navbar-collapse" id="navbarTogglerDemo02">


                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="/doctor-appointment"><i class="fa-solid fa-notes-medical"></i>
                                Appointments</a>
                        </li>
                        <li class="nav item">
                            <a class="nav-link" href="/doctor-report"><i class="fa-solid fa-circle-h"></i> report</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" href="/doc-profile"><i class="fa-solid fa-user-doctor"></i> Profile</a>
                        </li>
                        <li>
                            <a class="nav-link" href="/"><i class="fa-solid fa-right-from-bracket"> LogOut</i></a>
                        </li>

                    </ul>
                </div>
            </nav>
            <!-- Title -->


            <div class="row">
                <div class="col-lg-6">
                    <h1>Hello there, Life Saver DR.<%= userName1 %>
                    </h1>
                    <a href="/doctor-appointment"><button type="button"
                            class="btn btn-outline-light btn-lg book-button"><i style="margin-right: 2%;"
                                class="fa-solid fa-suitcase-medical"></i>Check Appointments</button>
                    </a>


                </div>
                <div class="col-lg-6">
                    <img class="title-image" src="\images\reg.webp" alt="doc">

                </div>
            </div>

        </div>


    </section>

    </div>

    <!-- Features -->

    <section style="height: 40%;" id="features">

        <div class="container-gg">
            <div class="abc">
                <i class="icon fa-solid fa-notes-medical fa-4x"></i>
                <h3>Appointment</h3>
                <p>Your patients are waiting for you Saver.</p>
            </div>

            <div class="pqr">
                <i class="icon fa-solid fa-truck-medical fa-4x"></i>
                <h3>Emergency</h3>
                <p>Emergency cases first.</p>
            </div>

            <div class="xyz">
                <i class="icon fa-regular fa-file fa-4x"></i>
                <h3>Douments</h3>
                <p>Easly share your docs.</p>

            </div>


        </div>

    </section>
    <div style="background-color: #5cefe5;" class="gg col-md-12 text-center p-3 py-5">
        <h4><b>Check Your apointments</b></h4>
        <h5>Your new patient is <b>Mr. NILAY</b>

        </h5>
    </div>

